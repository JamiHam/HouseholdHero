<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group4.householdhero.view.AddEditProductController">
    <children>
        <Label text="Secondary View" />
      <TextField fx:id="nameField" />
      <TextField fx:id="categoryField" />
      <TextField fx:id="priceField" />
      <DatePicker fx:id="bestBeforeField" />
        <Button fx:id="saveButton" text="Save" />
      <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
      <Button fx:id="wasteButton" mnemonicParsing="false" text="Move to waste" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
